#! /bin/sh

cat << 'EOF' > Cargo.toml
[package]
name    = "ncollide-user-guide"
version = "0.1.0"
authors = [ "SÃ©bastien Crozet <developer@crozet.re>" ]

[dependencies.ncollide2df32]
git = "http://github.com/sebcrozet/ncollide"

[dependencies.ncollide3df32]
git = "http://github.com/sebcrozet/ncollide"
EOF

echo -n > run.sh

for file in `ls *.rs`
do
    echo ""                      >> Cargo.toml
    echo "[[bin]]"               >> Cargo.toml
    echo "name = \"${file%.*}\"" >> Cargo.toml
    echo "path = \"./${file}\""  >> Cargo.toml
    echo "echo \"Running ${file%.*}.\""   >> run.sh
    echo "./target/release/${file%.*}"   >> run.sh
done
